{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true, // added
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "strict": true,  // Enable strict mode for better type checking
    "esModuleInterop": true, // Ensures compatibility with CommonJS and ES Modules
    "moduleResolution": "node" // added
  }
}
